  <script>
    const bgm = document.getElementById("bgm");

    if (localStorage.getItem("bgmPlaying") === "true") {
      bgm.volume = 0.6;
      bgm.play();
    }

    document.getElementById("nextBtn").addEventListener("click", () => {
      location.href = "page3.html";
    });
  </script>

